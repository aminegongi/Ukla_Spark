    <div align="center" >
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong>Modification</strong>
            </div>
            <div class="card-body card-block">
                <div action="" method="post" class="form-horizontal">
                    {{ form_start(form) }}
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="hf-email" class=" form-control-label">Nom</label>
                        </div>
                        <div class="col-12 col-md-9">
                            {{ form_widget(form.nomMaladie, {'attr':{'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="hf-password" class=" form-control-label">Description</label>
                        </div>
                        <div class="col-12 col-md-9">
                            {{ form_widget(form.description, {'attr':{'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="hf-password" class=" form-control-label">Type</label>
                        </div>
                        <div class="col-12 col-md-9">
                            {{ form_widget(form.type, {'attr':{'class': 'form-control'}}) }}
                        </div>

                    </div>

                </div>
                {{ form_widget(form.Modifier, {'attr':{'class': 'btn btn-primary btn-sm'}}) }}
                {{ form_end(form) }}
            </div>

        </div>
    </div>




{% endblock %}